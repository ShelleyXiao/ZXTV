<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bg"
    android:layout_height="match_parent"
    >

    <com.zx.zxtvsettings.view.ViewStatusTitleView
        android:id="@+id/status_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px60"
        android:layout_margin="@dimen/px20"/>

    <ListView
        android:id="@+id/app_uninstall_lv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px220"
        android:layout_marginBottom="@dimen/px100"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="@dimen/px200"
        android:layout_marginLeft="@dimen/px200"
        android:listSelector="#00000000"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_uninstall_title"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:layout_marginTop="@dimen/px120"
        android:layout_alignLeft="@id/app_uninstall_lv"
        />


</RelativeLayout>