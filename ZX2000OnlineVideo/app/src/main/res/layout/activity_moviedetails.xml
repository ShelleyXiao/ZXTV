                    </com.open.androidtvwidget.view.ReflectItemView>

                    -->

                </com.open.androidtvwidget.view.MainLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px21"
            android:layout_marginTop="@dimen/px24"
            android:text="@string/zx_movie_details_msg"
            android:textColor="#dcdcdc"
            android:textSize="@dimen/px30" />

    <!--    <include layout="@layout/details_item"></include> -->


            <com.open.androidtvwidget.recycle.RecyclerViewTV
                android:id="@+id/related_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:focusable="false" >

            </com.open.androidtvwidget.recycle.RecyclerViewTV>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/movie_details_pro"
        android:layout_width="@dimen/px150"
        android:layout_height="@dimen/px150"
        android:layout_gravity="center"
        android:visibility="visible"/>

