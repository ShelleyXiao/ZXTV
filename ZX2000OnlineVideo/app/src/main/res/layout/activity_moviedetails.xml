<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lemon95_main_bg"
    android:orientation="vertical"
    android:paddingLeft="@dimen/px138"
    android:paddingRight="@dimen/px168">

    <LinearLayout
        android:id="@+id/movie_details_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <com.zx.zx2000onlinevideo.ui.view.ViewStatusTitleView
            android:id="@+id/status_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px60"
            android:layout_margin="@dimen/px20" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/px20">

            <ImageView
                android:id="@+id/movie_details_img_id"
                android:layout_width="@dimen/px357"
                android:layout_height="@dimen/px482"
                android:scaleType="fitXY"
                android:src="@drawable/lemon_details_def" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px36"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/movie_details_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="#3df1ed"
                    android:textSize="@dimen/px36" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px12"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/movie_details_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="#dcdcdc"
                        android:textSize="@dimen/px30" />

                    <TextView
                        android:id="@+id/movie_details_grade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px40"
                        android:textColor="#dcdcdc"
                        android:textSize="@dimen/px30" />
                </LinearLayout>

                <TextView
                    android:id="@+id/movie_details_direct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px12"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="#dcdcdc"
                    android:textSize="@dimen/px30" />

                <TextView
                    android:id="@+id/movie_details_act"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px12"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="#dcdcdc"
                    android:textSize="@dimen/px30" />

                <TextView
                    android:id="@+id/movie_details_descri"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px12"
                    android:ellipsize="end"
                    android:lineSpacingMultiplier="1.2"
                    android:lines="3"
                    android:textColor="#dcdcdc"
                    android:textSize="@dimen/px30" />

                <com.open.androidtvwidget.view.MainLayout
                    android:id="@+id/main_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <com.open.androidtvwidget.view.ReflectItemView
                        android:id="@+id/details_play"
                        android:layout_width="@dimen/px279"
                        android:layout_height="@dimen/px78"
                        android:layout_marginLeft="@dimen/px20"
                        android:layout_marginRight="@dimen/px24"
                        android:layout_marginTop="@dimen/px27"
                        android:layout_marginBottom="@dimen/px12"
                        android:clickable="true"
                        android:focusable="true"
                        android:nextFocusDown="@+id/details_item1"
                        app:isShape="true"
                        app:radius="@dimen/px8">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="@dimen/px279"
                                android:layout_height="@dimen/px78"
                                android:scaleType="fitXY"
                                android:src="@drawable/lemon_anniu_03" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:scaleType="fitXY"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/lemon_tubiao_08" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="@string/zx_play"
                                    android:textColor="#FFFFFF"
                                    android:layout_marginLeft="@dimen/px12"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:textSize="@dimen/px40"/>

                            </LinearLayout>
                        </FrameLayout>
                    </com.open.androidtvwidget.view.ReflectItemView>

                    <com.open.androidtvwidget.view.ReflectItemView
                        android:id="@+id/details_serial_xq"
                        android:layout_width="@dimen/px279"
                        android:layout_height="@dimen/px78"
                        android:layout_marginLeft="@dimen/px344"
                        android:layout_marginRight="@dimen/px24"
                        android:layout_marginTop="@dimen/px27"
                        android:layout_marginBottom="@dimen/px12"
                        android:clickable="true"
                        android:focusable="true"
                        android:nextFocusDown="@+id/details_item1"
                        app:isShape="true"
                        app:radius="@dimen/px8"
                        android:visibility="gone">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="@dimen/px279"
                                android:layout_height="@dimen/px78"
                                android:scaleType="fitXY"
                                android:src="@drawable/lemon_anniu_03" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:scaleType="fitXY"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/lemon_tubiao_11" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="@string/zx_serial"
                                    android:textColor="#FFFFFF"
                                    android:layout_marginLeft="@dimen/px12"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:textSize="@dimen/px40"/>

                            </LinearLayout>
                        </FrameLayout>
                    </com.open.androidtvwidget.view.ReflectItemView>
