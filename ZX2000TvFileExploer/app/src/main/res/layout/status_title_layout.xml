<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/px54"
        android:layout_height="@dimen/px54"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/px5"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/title_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:text="@string/app_name"
        android:layout_marginLeft="@dimen/px15"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/logo"/>

    <TextView
        android:id="@+id/title_time_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="14:50:10"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true" />

    <ImageView
        android:id="@+id/home_networkstate"
        android:layout_width="40dp"
        android:layout_height="60dip"
        android:gravity="center_vertical|center_horizontal"
        android:src="@drawable/networkstate_off"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:layout_toLeftOf="@id/title_time_hour"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp" />

</RelativeLayout>