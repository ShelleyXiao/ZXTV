<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/grid_item_bg"
                android:orientation="vertical">

    <FrameLayout
        android:id="@+id/file_checkbox_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_alignParentRight="true"
        >

        <ImageView
            android:id="@+id/file_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/checked"
            android:visibility="gone"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/thumb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/px20"
        android:gravity="center">

        <ImageView
            android:id="@+id/file_image_frame"
            android:layout_width="@dimen/px140"
            android:layout_height="@dimen/px140"
            android:layout_gravity="center"
            android:background="@drawable/image_icon_bg"
            android:gravity="center"
            android:scaleType="centerInside"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/file_image"
            android:layout_width="@dimen/px160"
            android:layout_height="@dimen/px160"
            android:layout_gravity="center"
            android:gravity="center"
            android:scaleType="fitXY"/>
    </FrameLayout>

    <TextView
        android:id="@+id/file_name"
        android:layout_width="@dimen/px300"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thumb"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_marginBottom="@dimen/px15"
        android:layout_marginLeft="@dimen/px20"
        android:singleLine="true"
        android:textColor="@color/listGridItemText"
        android:textSize="18sp"
        />

</RelativeLayout>